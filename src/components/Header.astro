---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";

const now = new Date();
const nowString = `${now.getHours()}:${now.getMinutes()}:${now.getSeconds()}`;
---

<header class="max-w-screen-xl mx-auto px-5 py-2">
  <nav>
    <Hamburger />
    <Navigation />
    <div class="theme-icon">
      <ThemeIcon />
    </div>
    <div class="clock">{nowString}</div>
  </nav>
</header>

<style>
  header {
    color: var(--font-color);
    font-size: 18px;
    line-height: 1.6;
  }

  nav {
    display: flex;
  }

  .clock {
    padding: 20px 20px;
    font-size: 14px
  }

  .theme-icon {
    padding: 15px 0;
    margin-left: auto;
  }
</style>
