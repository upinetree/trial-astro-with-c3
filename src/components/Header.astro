---
import Hamburger from './Hamburger.astro';
import Navigation from "./Navigation.astro";

const now = new Date();
const nowString = `${now.getHours()}:${now.getMinutes()}:${now.getSeconds()}`;
---

<header>
  <nav>
    <Hamburger />
    <Navigation />
    <div class="clock">{nowString}</div>
  </nav>
</header>

<style>
  header {
    margin: auto;
    padding: 0.5rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 18px;
    line-height: 1.6;
  }

  nav {
    display: flex;
  }

  .clock {
    padding: 15px 20px;
    margin-left: auto;
  }
</style>
